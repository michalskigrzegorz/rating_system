<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | Rating System</title>
  <%= render 'layouts/rails_default' %>    
    <%= render 'layouts/shim' %>    
  </head>
  <body>
    <%= render 'layouts/header' %>  
    <div class="container">
      <div class="row">
        <div class="col-sm">

          <% flash.each do |message_type, message| %>
            <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
          <% end %>

          <h1 class="display-3">Rating System</h1>
      
          <%= yield %>
      
          <%= render 'layouts/footer' %>      
          
          <!-- logs window = live -->
          <%= debug(params) if Rails.env.development? %>
        </div>
      </div>
    </div>
  </body>
</html>



